# nerf-edge-kit Environment Configuration
# Copy this file to .env and configure for your local development

# Development Environment
NODE_ENV=development
DEBUG=nerf:*

# WebGPU Configuration
WEBGPU_BACKEND=webgpu
WEBGPU_FALLBACK=webgl
WEBGPU_POWER_PREFERENCE=high-performance

# NeRF Model Configuration
NERF_MODEL_PATH=./models
NERF_CACHE_PATH=./cache
NERF_MAX_CACHE_SIZE=1024

# Performance Settings
NERF_TARGET_FPS=60
NERF_MAX_SAMPLES=128
NERF_QUALITY_PRESET=high
NERF_ENABLE_FOVEATION=true

# Vision Pro / iOS Settings (when applicable)
VISION_PRO_EYE_TRACKING=true
METAL_DEVICE_SELECTION=auto
IOS_PERFORMANCE_MODE=balanced

# Python Training (if using Python components)
PYTHON_PATH=./python
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:1024

# Development Tools
# Enable/disable various development features
DEV_ENABLE_PROFILER=false
DEV_ENABLE_DEBUG_OVERLAY=false
DEV_LOG_LEVEL=info
DEV_HOT_RELOAD=true

# Testing Configuration
TEST_WEBGPU_MOCK=true
TEST_PERFORMANCE_BENCHMARKS=false
TEST_PARALLEL_WORKERS=4

# Build Configuration
BUILD_TARGET=web
BUILD_OPTIMIZATION=development
BUILD_SOURCE_MAPS=true

# Documentation
DOCS_AUTO_GENERATE=true
DOCS_PORT=3001

# Optional: Cloud/CI Configuration
# CI_ENABLE_GPU_TESTS=false
# CLOUD_MODEL_STORAGE_URL=
# CLOUD_API_KEY=

# Security (Never commit actual secrets)
# API_SECRET_KEY=your-secret-here
# DATABASE_URL=your-database-url
# JWT_SECRET=your-jwt-secret

# Platform-specific overrides
# Uncomment and configure as needed:

# macOS/iOS Development
# XCODE_DEVELOPER_DIR=/Applications/Xcode.app/Contents/Developer
# IOS_SIMULATOR_DEVICE=iPhone 15 Pro

# Web Development  
# WEBPACK_DEV_SERVER_PORT=3000
# WEBPACK_DEV_SERVER_HOST=localhost

# Python/ML Development
# CONDA_ENV_NAME=nerf-edge-kit
# JUPYTER_PORT=8888