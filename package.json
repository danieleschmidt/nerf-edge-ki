{
  "type": "module",
  "name": "nerf-edge-kit",
  "version": "1.0.0",
  "description": "Real-time Neural Radiance Field SDK for spatial computing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "node scripts/build-automation.js --production",
    "build:dev": "node scripts/build-automation.js",
    "build:web": "tsc && webpack --mode production",
    "build:analyze": "node scripts/build-automation.js --production --analyze",
    "dev": "webpack serve --mode development",
    "test": "jest",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:perf": "jest --config jest-performance.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .nyc_output .tmp",
    "security-check": "npm audit && npm outdated",
    "prepare": "husky install",
    "prebuild": "npm run clean && npm run lint && npm run typecheck",
    "postinstall": "npm run prepare",
    "start": "npm run dev",
    "docs:generate": "typedoc src --out docs/api --theme minimal",
    "docker:build": "docker build -t nerf-edge-kit .",
    "docker:dev": "docker-compose up development",
    "docker:prod": "docker-compose up production-web"
  },
  "keywords": [
    "nerf",
    "neural-radiance-fields",
    "3d-rendering",
    "webgpu",
    "spatial-computing",
    "vision-pro",
    "real-time"
  ],
  "author": "Daniel Schmidt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nerf-edge-kit.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
