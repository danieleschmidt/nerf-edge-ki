{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "dev"
    },
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {"type": "docs", "scope": "README", "release": "patch"},
          {"type": "refactor", "release": "patch"},
          {"type": "style", "release": false},
          {"type": "perf", "release": "patch"},
          {"scope": "no-release", "release": false}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tgz",
            "label": "NPM Package"
          },
          {
            "path": "coverage/lcov-report/**",
            "label": "Coverage Report"
          }
        ],
        "addReleases": "bottom",
        "draftRelease": false,
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} ðŸŽ‰\\n\\nThe release is available on:\\n- [npm package (@latest dist-tag)](https://www.npmjs.com/package/nerf-edge-kit/v/${nextRelease.version})\\n- [GitHub release](${releases.filter(release => release.name === 'GitHub')[0].url})\\n\\nYour **[semantic-release](https://github.com/semantic-release/semantic-release)** bot ðŸ“¦ðŸš€"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\\n\\n${nextRelease.notes}"
      }
    ]
  ],
  "preset": "angular",
  "tagFormat": "v${version}",
  "repositoryUrl": "https://github.com/danieleschmidt/nerf-edge-kit.git"
}